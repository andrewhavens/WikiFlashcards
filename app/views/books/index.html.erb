<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Author</th>
    <th>Isbn10</th>
    <th>Isbn13</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.subtitle %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn10 %></td>
    <td><%= book.isbn13 %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

