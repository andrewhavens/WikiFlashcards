<!DOCTYPE html>
<html>
<head>
  <title>WikiFlashcards</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body id="main_layout">

<%= render 'layouts/header' %>

<div id="content">
	<% if notice %>
	  <p id="notice"><%= notice %></p>
	<% end %>
	<% if alert %>
	  <p id="alert"><%= alert %></p>
	<% end %>
  <%= yield %>
</div>

<%= render 'layouts/footer' %>

</body>
</html>
